export GTK_THEME=Arc-Dark

# Clear the current keymap
xmodmap -e "clear Control"

# Remap Caps Lock to Control
xmodmap -e "remove Lock = Caps_Lock"
xmodmap -e "keysym Caps_Lock = Control_R"
xmodmap -e "add Control = Control_R"

# Map Control to as an additional Escape
xcape -e 'Control_R=Escape'
xset -q | grep "Caps Lock:\s*on" && xdotool key Caps_Lock

# set control and ptrsc to Super
xmodmap -e 'keycode 107 = Super_R'
xmodmap -e 'keycode 37 = Super_L'

# unmap Left super (the key is broken on my laptop)
xmodmap -e 'keycode 133 = NoSymbol'

# reduce the repeat delay
xset r rate 300 50

# turn off the auto monitor off
xset -dpms
xset s off
xset s off -dpms
xset -b

# turn off touchpad
xinput --disable "Synaptics TM3289-002"

# turn off back and forward buttons on mouse #TODO: run as soon as plugged in.
xinput set-button-map 14 1 2 3 4 5 6 7 0 0

# notificatoins
dunst &
battery-notify &

# night mode (aliased in bash with location)
redshift -l 49.26:--123.11 &

# clipboard manager
xfce4-clipman &
parcellite &

emacs --daemon &

# makes cursor disappear
unclutter -idle 1 &

# window manager
exec dwm

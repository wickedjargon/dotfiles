#!/usr/bin/env python3

import os


def main():
    try:
        # Check battery status
        status_path = "/sys/class/power_supply/BAT0/status"
        capacity_path = "/sys/class/power_supply/BAT0/capacity"
        
        if not os.path.exists(status_path) or not os.path.exists(capacity_path):
            print("")
            return

        with open(status_path, "r") as f:
            status = f.read().strip()
        
        with open(capacity_path, "r") as f:
            capacity = f.read().strip()
            
        # Determine icon
        if status == "Discharging":
            icon = "ðŸ”‹"
        else:
            # Charging, Full, Not charging, etc.
            icon = "âš¡"
            
        print(f"{icon} {capacity}%")
        
    except Exception:
        print("")

if __name__ == "__main__":
    main()

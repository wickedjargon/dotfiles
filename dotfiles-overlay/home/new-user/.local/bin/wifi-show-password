#!/bin/sh
# Show the current WiFi network password.
# Uses nmcli to get the password and displays it via notify-send.

password=$(nmcli device wifi show-password 2>/dev/null | grep -oP 'Password:\s*\K.*')

if [ -n "$password" ]; then
    notify-send -u normal -t 10000 "WiFi Password" "$password"
else
    notify-send -u low "No WiFi password available" "Not connected or no password set"
fi

set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set recolor true
set default-bg \#0d0e1c
set default-fg \#ebdbb2
set recolor-lightcolor \#0d0e1c
set recolor-darkcolor \#ebdbb2
set statusbar-bg \#0d0e1c
set statusbar-fg \#ebdbb2

map u scroll half-up
map d scroll half-down
map r reload
map R rotate
map = zoom in
map - zoom out
map ii recolor
map q quit
map gg goto top

set font "monospace 11"
set database "sqlite"

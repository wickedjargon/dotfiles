#!/bin/bash

# Load dmenu configuration
[ -f "$HOME/.config/dmenu/config" ] && . "$HOME/.config/dmenu/config"

# Define options
OPTIONS="toggle\nlight\ndark"

# Prompt user for choice
CHOICE=$(echo -e "$OPTIONS" | dmenu $DMENU_BASIC_ARGS -fn "$DMENU_FONT" -p "Theme:")

# Execute theme command based on choice
case "$CHOICE" in
    toggle)
        theme --toggle
        ;;
    light)
        theme --light
        ;;
    dark)
        theme --dark
        ;;
esac

#!/bin/sh
. ~/.config/dmenu/config

case "$(printf "Lock\nKill X\nReboot\nPoweroff\nHibernate\nDisplay Off\nLogout\nReload Desktop\nClean Local Bin\nDeploy Dotfiles\nScreenshot" | dmenu $DMENU_BASIC_ARGS -fn "$DMENU_FONT" -i -p 'System:')" in
    'Lock') slock ;;
    'Kill X') pkill X ;;
    'Reboot') systemctl reboot -i ;;
    'Poweroff') systemctl poweroff -i ;;
    'Hibernate') slock & sleep 0.2 && systemctl hibernate ;;
    'Display Off') xset dpms force off ;;
    'Logout') sys-logout ;;
    'Reload Desktop') reload-desktop ;;
    'Clean Local Bin') clean-local-bin ;;
    'Deploy Dotfiles') deploy-dotfiles ;;
    'Screenshot') dmenu-screenshot ;;
    *) exit 1 ;;
esac
#!/bin/sh
. ~/.config/dmenu/config

case "$(printf "connect to wifi network\nrescan wifi networks\nshow current wifi network\ndisconnect from wifi network\ndelete wifi connection\nshow password of wifi connection" | dmenu $DMENU_BASIC_ARGS -fn "$DMENU_FONT" -i -p 'Run: ')" in
    'connect to wifi network') dmenu-connect-to-network ;;
    'rescan wifi networks') wifi-rescan ;;
    'show current wifi network') wifi-current-network ;;
    'disconnect from wifi network') wifi-disconnect ;;
    'delete wifi connection') dmenu-wifi-delete-connection ;;
    'show password of wifi connection') wifi-show-password ;;
    *) exit 1 ;;
esac

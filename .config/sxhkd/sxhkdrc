#
# SXHKD Configuration
#

# ========== WINDOW MANAGEMENT ==========

# Close window
super + p
    bspc node -c

# Toggle fullscreen
super + f
    bspc node -t ~fullscreen

# Toggle floating
super + shift + f
    bspc node -t ~floating

# Toggle sticky
super + shift + s
    bspc node -g sticky

# Focus next/previous window
super + {j,k}
    bspc node -f {next,prev}.local.!hidden.window

# Swap with next/previous window
super + shift + {j,k}
    bspc node -s {next,prev}.local.!hidden.window

# ========== LAYOUT MANAGEMENT ==========

# Tiled mode
super + t
    bspc desktop -l tiled

# Monocle mode
super + g
    bspc desktop -l monocle

# Deck mode
super + r
    bspwm-deck

# Wide mode toggle
super + a
    bspwm-wide

# Preselect split direction
super + alt + {Left,Down,Up,Right}
    bspwm-smart-arrow {west,south,north,east}

# Cancel preselection
super + alt + space
    bspwm-smart-cancel

# Resize window (left)
super + shift + h
    bspc node -z right -20 0 || bspc node -z left -20 0

# Resize window (right)
super + shift + l
    bspc node -z right 20 0 || bspc node -z left 20 0



# ========== WORKSPACE SWITCHING ==========

# Switch to workspace
super + {1-6}
    bspc desktop -f '^{1-6}'

# Move window to workspace
super + shift + {1-6}
    bspc node -d '^{1-6}'

# Move to previous workspace
super + h
    curr=$(bspc query -D -d focused); first=$(bspc query -D -d .local | head -n1); [ "$curr" != "$first" ] && bspc desktop -f prev.local

# Move to next workspace
super + l
    curr=$(bspc query -D -d focused); last=$(bspc query -D -d .local | tail -n1); [ "$curr" != "$last" ] && bspc desktop -f next.local

# ========== APPLICATION LAUNCHERS ==========

# Terminal
super + Return
    alacritty

# dmenu
super + d
    dmenu-run

# App finder
super + space
    rofi-app-launcher

# Text editor menu
super + m
    dmenu-text-editor

# Web menu
super + w
    dmenu-web

# Commands menu
super + b
    dmenu-bluetooth

# Show keybindings
super + slash
    rofi-sxhkd-help

# System menu
super + BackSpace
    dmenu-system

# Clipmenu
super + c
    clipmenu

# WiFi menu
super + i
    dmenu-wifi-menu

# Night/day mode
super + n
    dmenu-night-and-day

# File explorer
super + e
    dmenu-explorer

# Audio explorer
super + comma
    dmenu-explorer ~/d/audio/; mpd-notification

# Scripts menu
super + s
    dmenu-explorer "~/.local/bin/" --run-executables

# ========== VOLUME CONTROLS ==========

# Volume up
super + equal
    xob-volume up

XF86AudioRaiseVolume
    xob-volume up

# Volume down
super + minus
    xob-volume down

XF86AudioLowerVolume
    xob-volume down

# Mute toggle
super + 0
    xob-volume mute

XF86AudioMute
    xob-volume mute

# ========== BRIGHTNESS CONTROLS ==========

# Brightness up
XF86MonBrightnessUp
    brightnessctl set +5%

# Brightness down
XF86MonBrightnessDown
    brightnessctl set 5%-

# ========== MEDIA CONTROLS ==========

# MPD previous track
super + Left
    mpc prev && polybar-msg action "#mpd.hook.0"; mpd-notification

# MPD next track
super + Right
    mpc next && polybar-msg action "#mpd.hook.0"; mpd-notification

# MPD volume up
super + Up
    xob-mpd up; polybar-msg action "#mpd.hook.0"

# MPD volume down
super + Down
    xob-mpd down; polybar-msg action "#mpd.hook.0"

# MPD play/pause toggle
super + period
    mpc toggle && polybar-msg action "#mpd.hook.0"; mpd-notification

XF86Audio{Play,Pause}
    mpc toggle && polybar-msg action "#mpd.hook.0"


XF86Audio{Play,Pause}
    mpc toggle && polybar-msg action "#mpd.hook.0"

XF86AudioStop
    mpc stop && polybar-msg action "#mpd.hook.0"

XF86AudioNext
    mpc next && polybar-msg action "#mpd.hook.0"; mpd-notification

XF86AudioPrev
    mpc prev && polybar-msg action "#mpd.hook.0"; mpd-notification



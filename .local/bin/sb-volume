#!/bin/sh

# Get the default sink
SINK=@DEFAULT_SINK@

# Get the current volume and mute status
VOLUME=$(pactl get-sink-volume "$SINK" | awk '{print $5}' | head -n1)
MUTED=$(pactl get-sink-mute "$SINK" | awk '{print $2}')

if [ "$MUTED" = "yes" ]; then
    echo "ðŸ”‡ $VOLUME"
else
    echo "ðŸ”Š $VOLUME"
fi

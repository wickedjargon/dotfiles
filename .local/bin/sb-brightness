#!/bin/sh

# Exit silently if no brightness control (desktop systems)
# Check if any backlight device exists
if [ ! -d /sys/class/backlight ] || [ -z "$(ls -A /sys/class/backlight 2>/dev/null)" ]; then
    exit 0
fi

# Get current brightness as a percentage
BRIGHTNESS=$(brightnessctl get)
MAX=$(brightnessctl max)
PERCENT=$(( 100 * BRIGHTNESS / MAX ))

echo "ðŸŒž ${PERCENT}%"

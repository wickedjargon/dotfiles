#!/bin/sh

case "$(printf " lock\n restart dwm\n kill X\n reboot\n poweroff\n hibernate\n display off\n logout" | dmenu -i -p 'Action: ')" in
    ' lock') slock ;;
    ' restart dwm') restartdwm ;;
    ' kill X') pkill X ;;
    ' reboot') systemctl reboot -i ;;
    ' poweroff') systemctl poweroff -i ;;
    ' hibernate') slock & sleep 0.2 && systemctl hibernate ;;
    ' display off') xset dpms force off ;;
    ' logout') sys-logout ;;
    *) exit 1 ;;
esac

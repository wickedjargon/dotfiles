#!/usr/bin/env python3

import subprocess


def main():
    try:
        result = subprocess.run(
            ["apt", "list", "--upgradable"],
            capture_output=True,
            text=True,
            timeout=30,
        )
        lines = [l for l in result.stdout.strip().splitlines() if "upgradable" in l.lower()]
        count = len(lines)
        if count > 0:
            print(f"ðŸ“¦{count}")
    except Exception:
        pass


if __name__ == "__main__":
    main()

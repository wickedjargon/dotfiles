#!/bin/sh
. ~/.config/dmenu/config

case "$(printf "dmenu-connect-to-network\nwifi-current-network\nwifi-disconnect\nwifi-rescan\ndmenu-wifi-delete-connection\nwifi-show-password" | dmenu $DMENU_BASIC_ARGS -fn "$DMENU_FONT" -i -p 'Run: ')" in
    'dmenu-connect-to-network') dmenu-connect-to-network ;;
    'wifi-current-network') wifi-current-network ;;
    'wifi-disconnect') wifi-disconnect ;;
    'wifi-rescan') wifi-rescan ;;
    'dmenu-wifi-delete-connection') dmenu-wifi-delete-connection ;;
    'wifi-show-password') wifi-show-password ;;
    *) exit 1 ;;
esac
